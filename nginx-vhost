server { ## listen for ipv4; this line is default and implied
        #listen   [::]:80 default ipv6only=on; ## listen for ipv6
 
        root /home/ubuntu/VLink/www;
        index index.html index.htm;
 
        # Make site accessible from http://localhost/
        server_name v.kxkm.net;

	add_header "Cache-Control" "max-age=0, no-cache, no-store, must-revalidate";
	add_header "Pragma" "no-cache";
	add_header "Expires" "-1";

	listen 443 ssl; # managed by Certbot
    	ssl_certificate /etc/letsencrypt/live/v.kxkm.net/fullchain.pem; # managed by Certbot
    	ssl_certificate_key /etc/letsencrypt/live/v.kxkm.net/privkey.pem; # managed by Certbot
    	include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = v.kxkm.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen   80;
        server_name v.kxkm.net;
    return 404; # managed by Certbot


}
